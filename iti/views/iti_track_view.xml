<odoo>
    <data>

        <record id="iti_track_tree_view" model="ir.ui.view">
            <field name="name">iti.track.tree.view</field>
            <field name="model">iti.track</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="address"/>
                    <field name="capacity"/>
                    <field name="is_open"/>
                    <field name="duration"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>


        <record id="iti_track_form_view" model="ir.ui.view">
            <field name="name">iti.track.from.view</field>
            <field name="model">iti.track</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="capacity"/>
                            <field name="is_open"/>
                            <field name="duration"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids">
                                    <tree>
                                        <field name="first_name"/>
                                        <field name="second_name"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="first_name"/>
                                            <field name="second_name"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Courses">
                                <field name="course_ids">
                                    <tree editable="bottom">
                                        <field name="course_id"/>
                                        <field name="hours"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="course_id"/>
                                            <field name="hours"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="iti_track_action" model="ir.actions.act_window">
            <field name="name">Tracks</field>
            <field name="res_model">iti.track</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="iti_track_menu" name="Tracks" parent="iti_root_menu" action="iti_track_action"/>


    </data>
</odoo>

